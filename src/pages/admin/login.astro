---
import LoginAdminForm from '../../components/LoginAdminForm'
import Layout from '../../layouts/Layout.astro'
---

<Layout title="Welcome to Astro.">
	<div class="inline-flex w-full flex-col items-center justify-start gap-12 bg-white px-11 py-28">
		<div class="text-4xl font-bold text-black">Login</div>
		<div class="text-base font-normal text-black opacity-70">Selamat datang di Oke Laundry</div>
		<LoginAdminForm client:load />

		<div class="text-center text-base font-normal text-black opacity-60">
			Belum punya akun?
			<a href="/admin/register" class="text-center text-base font-bold text-black underline">
				Register
			</a>
		</div>
	</div>
</Layout>
