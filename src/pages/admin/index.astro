---
import AdminLayout from '../../layouts/AdminLayout.astro'
---

<AdminLayout title="Dashboard">
	<div class="inline-flex h-96 w-96 flex-col items-center justify-start gap-6 bg-white px-8 py-4">
		<div class="inline-flex items-center justify-between self-stretch">
			<div class="shrink grow basis-0 text-2xl font-bold text-black">Dashboard</div>
			<div class="flex h-11 shrink grow basis-0 items-center justify-end gap-2">
				<a href="/admin/account" class="relative h-11 w-11">
					<div
						class="absolute left-[17.25px] top-[13.42px] h-3 w-3 rounded-full border-4 border-pink-800"
					>
					</div>
					<div
						class="absolute left-[5.75px] top-[5.75px] h-9 w-9 rounded-full border-4 border-pink-800"
					>
					</div>
				</a>
			</div>
		</div>
		<a
			href="/admin/transaksi"
			class="inline-flex items-center justify-center gap-2.5 self-stretch rounded-xl bg-green-500 px-32 py-11"
		>
			<div class="text-xl font-bold text-white">Transaksi</div>
		</a>
		<a
			href="/admin/laporan-pelanggan"
			class="inline-flex items-center justify-center gap-2.5 self-stretch rounded-xl bg-green-500 px-32 py-11"
		>
			<div class="text-xl font-bold text-white">Laporan Pelanggan</div>
		</a>
	</div>
</AdminLayout>
